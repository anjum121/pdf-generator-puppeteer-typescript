{
  "compilerOptions": {
    "lib": ["es6", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "./dist",
    "inlineSources": false,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}